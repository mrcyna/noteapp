{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json"
    },
    "rules" : {
        "no-console": "off",
        "indent": [ "error", 2 ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "never" ],
        "no-trailing-spaces": [ "error", { "skipBlankLines": true } ],
        "no-useless-constructor": [ "off" ],
        "no-unused-vars": [ "error" ],
        "arrow-spacing": [ "error" ],
        "semi-spacing": [ "error" ],
        "space-infix-ops": [ "error" ],
        "space-before-blocks": [ "error" ],
        "comma-spacing": [ "error" ],
        "space-in-parens": [ "error" ],
        "key-spacing": [ "error" ]
    }
}
